@model Data_Access.Model.Product

@{
    ViewBag.Title = "Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{Tạo mới sản phẩm}
@section search{Product}
@section jsFooter{
    <script>
            CKEDITOR.replace('productDescription', { customConfig:'/Plugins/ckeditor/config.js',});
    </script>
    <script>
                $('#lblImageLocation').on('click', function () {
                    var finder = new CKFinder();
                    finder.selectActionFunction=function (url) {
                        $('#lblImageLocation').val(url);
                    };
                    finder.popup();
                })
    </script>
}
